{
    "manifest_version": 2,
    "name": "Dictionary",
    "version": "0.1",
    "description": "Use the WordNet dictionary to lookup the definition of selected words on a page.",
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_title": "dictionary"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "homepage_url": "http://www.cis233w.xyz/dict/"
}